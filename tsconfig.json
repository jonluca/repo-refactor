{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "target": "es2020",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "test/helpers.test.ts"]
}
